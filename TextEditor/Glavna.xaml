<Window x:Class="TextEditor.Glavna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="Glavna" Height="450" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="_File" FontSize="16" Foreground="Coral">
                <MenuItem Header="_New" Click="New_Click"></MenuItem>
                <MenuItem Header="_Open" Click="Open_Click"></MenuItem>
                <MenuItem Header="_Save and open" Click="Save_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Close" Click="Close_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </StackPanel>
</Window>
